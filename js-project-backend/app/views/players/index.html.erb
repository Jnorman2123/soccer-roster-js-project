<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Nationality</th>
      <th>Appearances</th>
      <th>Goals</th>
      <th>Market value</th>
      <th>Jersey number</th>
      <th>Age</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.image %></td>
        <td><%= player.nationality %></td>
        <td><%= player.appearances %></td>
        <td><%= player.goals %></td>
        <td><%= player.market_value %></td>
        <td><%= player.jersey_number %></td>
        <td><%= player.age %></td>
        <td><%= player.team_id %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

